@model contohaspcore.Models.Student

@{
    Layout=null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Student</title>
</head>
<body>
    <h2>Edit Student</h2>
     <form method="POST" action="~/Student/Edit">
        <fieldset>
            <input type="hidden" name="Nim" value="@Model.Nim">
            <label for="Nama">Nama :</label><br/>
            <input type="text" name="Nama" value="@Model.Nama"><br/><br/>
            <label for="Alamat">Alamat :</label><br/>
            <input type="text" name="Alamat" value="@Model.Alamat"><br/><br/>
            <label for="Telp">Telp :</label><br/>
            <input type="text" name="Telp" value="@Model.Telp"><br/><br/>

            <input type="submit" value="Submit">
        </fieldset>
    </form>
</body>
</html>